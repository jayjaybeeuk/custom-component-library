{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "sourceMap": true,
    "declaration": true,
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": ["packages/*/src", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "packages/*/lib",
    "packages/*/dist",
    "packages/*/node_modules"
  ]
}
